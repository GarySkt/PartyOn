<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/imagenevento"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/slider_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="5dp"
        android:paddingRight="20dp">

        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.2"
            style="?android:attr/ratingBarStyleSmall"/>


    <TextView
        android:id="@+id/nombre_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Dia del Skate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#009688"
        android:textSize="20sp"
        android:textStyle="bold"/>
        <TextView
            android:id="@+id/fecha_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombre_evento"
            android:layout_below="@+id/nombre_evento"
            android:text="21/06/18"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lugarevento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre_evento"
            android:layout_toEndOf="@id/fecha_evento"
            android:paddingLeft="5dp"
            android:text="Discoteca: Tusan"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>